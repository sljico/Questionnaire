<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Dashboard Page</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<% include ../views/partials/header %>



<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
            <form id="addQuestionnaire" method="post">
                <div class="form-group">
                    <label for="title">Title: </label>
                    <input id="title" type="text" name="title" class="form-control" required>
                </div>


                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
</div>


<div style="margin: 30px auto; display: block; width: 25%;" class="questionnaire-message text-center"></div>


<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="addQuestions" method="post">

                <div class="text-center">
                    <select class="questionnaireID" name="questionnaireID">
                        <% JSON.parse(items).forEach(function(item) { %>
                        <option value="<%= item.id %>"><%= item.title %></option>
                        <% }) %>
                    </select>
                </div>

                <br>
                <br>

                <div id="wrapper">
                    <div id="klon1" class="row single-question">
                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 single-question__wrapper">
                            <div class="form-group">
                                <input placeholder="Question" id="question" type="text" name="question" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <select class="selectpicker" title="Question Type" required>
                                <option>Yes/No</option>
                                <option>Multiple Choice</option>
                                <option>Single Choice</option>
                            </select>
                        </div>
                    </div>
                </div>

                <br>

                <button type="submit" class="btn btn-success">Save</button>
                <a href="/dashboard" class="btn btn-info">Dashboard</a>
            </form>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
<script src="/javascripts/main.js"></script>

</body>
</html>
