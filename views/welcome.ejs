<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Questionnaire Page</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>

    <% include ../views/partials/header %>

    <div class="container">
      <div class="row">
        <% var questionnaires = JSON.parse(items);

        if(questionnaires.length) { %>
          <% questionnaires.forEach(function(item) { %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <div class="caption">
                  <h3><%= item.title %></h3>
                  <p>
                    <a href="/questionnaire/<%= item.id %>" class="btn btn-primary" role="button">Take questionnaire</a>
                  </p>
                </div>
              </div>
            </div>
          <% })%>
        <% } else { %>
            <h1>No questionnaire found</h1>
        <% } %>

      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
    <script src="/javascripts/main.js"></script>

  </body>
</html>
